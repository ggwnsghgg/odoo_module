<?xml version="1.0" encoding="utf-8"?>
<odoo noupdate="1">
    <record id="payment_acquirer_inipay" model="payment.acquirer">
        <field name="provider">inipay</field>
        <field name="name">INIpay</field>
        <field name="company_id" ref="base.main_company"/>
        <field name="image_128" type="base64" file="payment_inipay/static/src/img/inipay_icon.jpg"/>
        <field name="view_template_id" ref="inipay_form"/>
        <field name="description" type="html">
            <p>
                INIpay is the most popular online payment platform in Korea. Korean consumers can buy online using their INIpay eWallet.
            </p>
            <ul class="list-inline">
                <li class="list-inline-item"><i class="fa fa-check"/>Online Payment</li>
                <li class="list-inline-item"><i class="fa fa-check"/>Payment Status Tracking</li>
            </ul>
        </field>
        <field name="payment_icon_ids" eval='[(6, 0, [ref("payment.payment_icon_cc_jcb"),ref("payment.payment_icon_cc_mastercard"),ref("payment.payment_icon_cc_western_union"),ref("payment.payment_icon_cc_webmoney"),ref("payment.payment_icon_cc_visa")])]'/>
        <field name="state">test</field>
        <field name="inipay_mid">dummy</field>
        <field name="inipay_mid_key">dummy</field>
        <field name="inipay_mid_iv">dummy</field>
        <field name="inipay_sign_key">dummy</field>
    </record>
</odoo>
