<?xml version='1.0' encoding='utf-8' ?>
<odoo>

    <record id="payment_provider_form" model="ir.ui.view">
        <field name="name">Inicis Provider Form</field>
        <field name="model">payment.provider</field>
        <field name="inherit_id" ref="payment.payment_provider_form"/>
        <field name="arch" type="xml">
            <group name="provider_credentials" position='inside'>
                <group attrs="{'invisible': [('code', '!=', 'inicis')]}">
                    <field name="inicis_merchant_id"
                           string="Merchant ID"
                           />
<!--                    <field name="inicis_merchant_key"-->
<!--                           string="Merchant Hash Key"-->
<!--                           />-->
<!--                    <field name="inicis_merchant_iv"-->
<!--                           string="Merchant ID IV"-->

                           password="True"/>
                    <field name="inicis_sign_key"
                           string="Sign Key"

                           groups="base.group_no_one"/>
                </group>
            </group>
        </field>
    </record>

</odoo>
