<?xml version='1.0' encoding='utf-8'?>
<odoo>

    <record id="zoo_manger_purchase" model="ir.ui.view">
        <field name="name">Zoo Manger Purchase</field>
        <field name="model">zoo.manger</field>
        <field name="inherit_id" ref="zoo_manager.zoo_manger_view_form"/>
        <field name="arch" type="xml">
          <xpath expr="//sheet" position="before">
                <field name = "purchase_move_id" invisible ="1"/>
                <header>
                    <button name="purchase_create"
                            string="Purchase"
                            type="object"
                            stats="draft"
                            attrs="{'invisible': [('purchase_move_id', '!=', False)]}">
                    </button>
                </header>
          </xpath>
        </field>
     </record>

    <record id="zoo_manger_purchase_button" model="ir.ui.view">
        <field name="name">Zoo Manger Purchase</field>
        <field name="model">zoo.manger</field>
        <field name="inherit_id" ref="zoo_manager.zoo_manger_view_form"/>
        <field name="arch" type="xml">
          <xpath expr="//group" position="before">
               <div class="oe_button_box" name="button_box">
                    <field name = "purchase_move_id" invisible ="1"/>
                    <button type="object"
                            name="call_sale_order"
                            string="Purchase Move"
                            class="oe_stat_button"
                            icon="fa-archive"
                            attrs="{'invisible': [('purchase_move_id', '=', False)]}"
                        />
               </div>
          </xpath>
        </field>
     </record>







